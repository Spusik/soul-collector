{
  "schemaVersion": 1,
  "id": "soulcoll",
  "version": "${version}",

  "name": "Soul Collector",
  "description": "A mod about collecting your enemies souls' to use them to your advantage.",
  "authors": [
    "aSomik - Author",
    "Librarian Night - Code Helper",
    "PinkGoosik - Code Helper",
    "aViolet - Spriter and a Qt"
  ],
  "contact": {
    "homepage": "https://fabricmc.net/",
    "sources": "https://github.com/aSomik/soul-collector"
  },

  "license": "MIT",
  "icon": "assets/soulcoll/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "soulcollector.SoulCollectorMod"
    ],
    "client": [
      "soulcollector.client.SoulCollectorClient"
    ]
  },
  "mixins": [
    "soulcoll.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.11.3",
    "fabric": "*",
    "minecraft": "1.18.x",
    "trinkets": ">=3.0.0",
    "java": ">=17"
  }
}
